BOT_IMAGE=ghcr.io/artcc/ollama-telegram-bot:latest
BOT_CONTAINER_NAME=ollama-telegram-bot

TELEGRAM_BOT_TOKEN=replace_with_telegram_bot_token

# Example: http://ollama:11434 if Ollama runs on the same Docker network,
# or http://host.docker.internal:11434 / your server internal URL.
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_DEFAULT_MODEL=llama3.2
MODEL_PREFS_DB_PATH=/data/bot.db
BOT_DATA_DIR=./data

# Numeric Telegram user IDs separated by commas.
# Example: 123456789,987654321
ALLOWED_USER_IDS=

LOG_LEVEL=INFO
REQUEST_TIMEOUT_SECONDS=60
MAX_CONTEXT_MESSAGES=12
TZ=Europe/Madrid